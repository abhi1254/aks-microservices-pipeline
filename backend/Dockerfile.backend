FROM python:3.11-slim

WORKDIR /app

# Install dependencies including Azure SDK and MySQL connector
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt \
    && pip install azure-identity azure-keyvault-secrets mysql-connector-python

# Copy backend code
COPY . .

# Expose port
EXPOSE 8000

# Run FastAPI app
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]
